<script>
     function getCookie(cname) {
      var name = cname + "=";
      var decodedCookie = decodeURIComponent(document.cookie);
      var ca = decodedCookie.split(";");
      for (var i = 0; i < ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0) == " ") {
          c = c.substring(1);
        }
        if (c.indexOf(name) == 0) {
          return c.substring(name.length, c.length);
        }
      }
      return "";
    }
    const token = getCookie("t");
    const data = JSON.parse(localStorage.getItem("IDUser"));

    if (data.role===1 && token) {
        $.ajax({
         url:`/${data.id}/show-user`,
         type:'POST',
         headers:{
             'Authorization':`Bearer ${token}`
         }
        }).then((result)=>{
            result.map((item)=>{
                if (item.isActive) {
                    const template=`
            <tr>
                <td>${item.name}</td>
                <td>${item.address}</td>
                <td>${item.email}</td>
                <td>${item.STK}</td>
                <td>${item.numMoney}</td>
                <td>${item.CMND}</td>  
                <td><i style="color:rgb(66, 183, 42);margin-left:1.2rem " class="fas fa-circle fa-xs"></i></td>             
                <td style="text-align:center">
                <button type="button" class="btn btn-warning btn-update btn_small" onClick=btnUpdate("${item._id}") id="${item._id}" style="border-radius: 5px; width:8rem">Update</button>
                <button type="button" class="btn btn-warning btn-action btn_small" onClick=btnAction("${item._id}") id="${item._id}" style="border-radius: 5px;width:8rem">Ban/Active</button>                                       
                </td>                       
            </tr>
            `
            return $('.info-user').append(template);
                } else { 
            const template=`
            <tr>
                <td>${item.name}</td>
                <td>${item.address}</td>
                <td>${item.email}</td>
                <td>${item.STK}</td>
                <td>${item.numMoney}</td>
                <td>${item.CMND}</td>  
                <td> <i style="color:red;margin-left:1.2rem " class="fas fa-circle fa-xs"></i></td>             
                <td style="text-align:center">
                <button type="button" class="btn btn-warning btn-update btn_small" onClick=btnUpdate("${item._id}") id="${item._id}" style="border-radius: 5px ;width:8rem;">Update</button>
                <button type="button" class="btn btn-warning btn-action btn_small" onClick=btnAction("${item._id}") id="${item._id}" style="border-radius: 5px;width:8rem">Ban/Active</button>                                       
                </td>                       
            </tr>
            `
            return $('.info-user').append(template);
                }

           
            })
            
        })
    }

  function btnUpdate(id){
    localStorage.setItem('userInfo',JSON.stringify({
        id:id
    }))
     window.location.href="/update"

 }

 function btnAction(id){
    $.ajax({
        url:`/${data.id}/ban-user/${id}`,
        type:'PUT',
        headers:{
            'Authorization':`Bearer ${token}`
        }
    }).then((data)=>{
     if (!data.error) {
        $('.template-alert').append(`
                 <div class="alert alert-success" role="alert">
                      Cập nhật Active thành công !
